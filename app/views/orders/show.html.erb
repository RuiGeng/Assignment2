
<h1>The Order Information</h1>

<div class="container">
  <div class="row">
    <% if @order.pizzas.any? %>
      <h3>Pizza (<%= @order.pizzas.count %>)</h3>
      <ol class="orders">
      <%= render @pizzas %>
      </ol>
      <%= will_paginate @pizzas %>
    <% end %>
  </div>
</div>

<div class="container">
 <div class="row">
  <h3>Delivery Information</h3>
   <address>
    <strong>First Name: </strong><%= @order.first_name %><br>
    <strong>Last Name: </strong><%= @order.last_name %><br>
    <strong>Phone Number: </strong><%= @order.phone_number %><br>
    <strong>Email address: </strong><%= @order.email %><br>
    <strong>Address Line 1: </strong><%= @order.address_line1 %><br>
    <strong>Address Line 2: </strong><%= @order.address_line2 %><br>
    <strong>Province: </strong><%= @order.province %><br>
    <strong>City: </strong><%= @order.city %><br>
    <strong>Postal Code: </strong><%= @order.postal_code %><br>
   </address>
 </div>
</div>
<div class="container">
  <div class="row">
   <h3>Pirce Information</h3>
    <strong>Subtotal: </strong><%= @order.subtotal %><br>
    <strong>Tax: </strong><%= @order.tax %><br>
    <strong>Total: </strong><%= @order.total %><br>
  </div>
</div>

<%= link_to "Back", :back %>