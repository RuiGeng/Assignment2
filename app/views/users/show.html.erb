<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.name %></h1>
      <% if @user.admin? %>
        <h1>Administrator</h1>
      <% else %>
        <h1>User</h1>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.orders.any? %>
      <h3>Orders (<%= @orders.count %>)</h3>
      <ol class="orders">
      <%= render @orders %>
      </ol>
      <%= will_paginate @orders %>
    <% end %>
  </div>
</div>